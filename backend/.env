# Environment Configuration File
# Copy this to .env and update with your actual values

# Application Settings
APP_NAME=GaadiSetGo API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
HOST=127.0.0.1
PORT=8000

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=gaadisetgo

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random-development-key-2024
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:3001","https://localhost:3000"]

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@gaadisetgo.com
EMAILS_FROM_NAME=GaadiSetGo

# External API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
OPENAI_API_KEY=your-openai-api-key

# Security
SECRET_KEY=your-super-secret-key-for-general-encryption-development-2024
SECURITY_PASSWORD_SALT=your-password-salt-development

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf","doc","docx"]
